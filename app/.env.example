
# ===========================================
# CONFIGURACIÓN DEL SISTEMA ERP COMPLETO v4.0
# ===========================================

# Base de Datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/erp_database"

# Autenticación NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu_secret_super_seguro_aqui_cambiar_en_produccion"

# Configuración de la Aplicación
NODE_ENV="development"
PORT=3000

# ===========================================
# INTEGRACIONES EXTERNAS (OPCIONALES)
# ===========================================

# OpenPay - Pasarela de Pagos (México)
OPENPAY_MERCHANT_ID="tu_merchant_id"
OPENPAY_PUBLIC_KEY="tu_public_key" 
OPENPAY_PRIVATE_KEY="tu_private_key"
OPENPAY_BASE_URL="https://sandbox-api.openpay.mx/v1"
OPENPAY_ENVIRONMENT="sandbox"

# Abacus.AI - APIs de IA para Business Intelligence
ABACUSAI_API_KEY="tu_api_key_abacus"

# SMS - Servicio de mensajería
SMS_API_KEY="tu_api_key_sms"
SMS_API_URL="https://api.sms-provider.com"

# WhatsApp Business API
WHATSAPP_API_TOKEN="tu_token_whatsapp"
WHATSAPP_PHONE_NUMBER_ID="tu_phone_number_id"

# Email - Servicio SMTP
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER="tu_email@gmail.com"
EMAIL_SMTP_PASSWORD="tu_app_password"

# ===========================================
# FACTURACIÓN ELECTRÓNICA (MÉXICO)
# ===========================================

# PAC (Proveedor Autorizado de Certificación)
PAC_PROVIDER="finkok" # finkok, facturama, sw, etc.
PAC_API_KEY="tu_api_key_pac"
PAC_API_URL="https://facturacion.finkok.com/servicios/soap"

# Certificados de Sello Digital (CSD)
CSD_CERTIFICATE_PATH="/path/to/certificate.cer"
CSD_PRIVATE_KEY_PATH="/path/to/private_key.key"
CSD_PRIVATE_KEY_PASSWORD="password_csd"

# ===========================================
# CONFIGURACIÓN DE EMPRESA
# ===========================================

# Datos de la Empresa
COMPANY_NAME="Tu Empresa S.A. de C.V."
COMPANY_RFC="XAXX010101000"
COMPANY_ADDRESS="Dirección de tu empresa"
COMPANY_PHONE="55-1234-5678"
COMPANY_EMAIL="contacto@tuempresa.com"
COMPANY_LOGO_URL="/logo-empresa.png"

# Configuración Regional
DEFAULT_CURRENCY="MXN"
DEFAULT_TIMEZONE="America/Mexico_City"
DEFAULT_LANGUAGE="es"
IVA_RATE=16

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Debug y Logs
DEBUG_MODE="true"
LOG_LEVEL="info"

# Uploads y Almacenamiento
UPLOAD_MAX_SIZE="10MB"
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,xlsx"

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# Descomenta y configura para producción:

# DATABASE_URL="postgresql://user:pass@prod-db.com:5432/erp_prod"
