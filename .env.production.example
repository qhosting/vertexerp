# WhatsApp Business API
WHATSAPP_API_TOKEN="token_produccion"
WHATSAPP_PHONE_NUMBER_ID="phone_number_id_produccion"

# Email SMTP
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER="produccion@tuempresa.com"
EMAIL_SMTP_PASSWORD="app_password_produccion"

# ===========================================
