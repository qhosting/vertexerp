# Base de Datos PostgreSQL (PRODUCCIÓN)
DATABASE_URL="postgresql://usuario_prod:password_prod@db:5432/erp_production"

# PostgreSQL Config (para docker-compose)
POSTGRES_USER=erp_user_prod
POSTGRES_PASSWORD=password_super_seguro_prod
