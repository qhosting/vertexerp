OPENPAY_BASE_URL="https://api.openpay.mx/v1"
OPENPAY_ENVIRONMENT="production"

# Abacus.AI
ABACUSAI_API_KEY="api_key_produccion"

# SMS
SMS_API_KEY="api_key_produccion"
